 <div id="wrapper">
        <!-- Page Content -->
        <div id="page-wrapper">
            <div class="container-fluid">
                <div class="row">
                    <br/>
                    <div class="col-lg-12">
                    <div class="panel panel-default">
                        <div class="panel-heading">
                           <h3> Cadastro de Categoria </h3>
                           <% if @category.errors.any? %>
                              <div class="alert alert-danger alert-dismissable">
                                <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
                                <% @category.errors.full_messages.each do |message| %>
                                  <%= message %>
                                <% end %>
                              </div>
                           <% end %>
                        </div>
                        <div class="panel-body">
                            <div class="row">
                                <div class="col-lg-6">
                                    <%= form_for @category, url:  backoffice_category_index_path do |f| %>
                                             <%= f.label :descrição_da_categoria %>
                                             <%= f.text_field :description %>
                                             <%= f.submit 'Alterar' %>
                                    <% end %>
                                </div>
                                <!-- /.col-lg-6 (nested) -->
                            </div>
                            <!-- /.row (nested) -->
                        </div>
                        <!-- /.panel-body -->
                    </div>
                    </div>
                    <!-- /.col-lg-12 -->
                </div>
                <!-- /.row -->
            </div>
            <!-- /.container-fluid -->
        </div>
        <!-- /#page-wrapper -->

    </div>
    <!-- /#wrapper -->

                    