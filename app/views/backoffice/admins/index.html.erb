<br>
<div class="panel panel-default">
    <div class="panel-heading">
        <h3>Administradores</h3>
        <%= link_to new_backoffice_admin_path, class:"btn btn-success btn-circle pull-right", style: "margin-top: -45px" do %>
        	<i class="fa fa-plus "></i>
        <%end%>
    </div>
    <!-- /.panel-heading -->
    <div class="panel-body">
        <div class="table-responsive">
            <table class="table table-striped table-bordered table-hover">
                <thead>
                    <tr>
                        <th>Email</th>
                        <th>Senha</th>
                    </tr>
                </thead>
                <tbody>
                	<% @admins.each do |adm| %>
                    <tr>
                      <td><%= adm.email%></td>
                        <td style="width: 150px">
                       		<%= link_to edit_backoffice_admin_path(adm), class:"btn btn-primary btn-circle" do %>
                           			<i class="fa fa-search-plus "></i>
  				              	<% end %>
                          <% if current_admin != adm %>
                            <%= link_to backoffice_admin_path(adm), method: :delete, data: {confirm: "VocÃª tem certeza que quer apagar o administrador #{adm.email}?"}, class: "btn btn-danger btn-circle" do %>
                                <i class="fa fa-trash-o "></i>
                            <% end %>
                          <% end %>
    							     </td>
                      </tr>
                  <%end%>
                </tbody>
            </table>
        </div>
        <!-- /.table-responsive -->
    </div>
    <!-- /.panel-body -->
</div>
<!-- /.panel -->

